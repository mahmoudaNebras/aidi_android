<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
  >








        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">







            <ImageView
                android:layout_width="@dimen/d170"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="@dimen/d30"
                android:src="@drawable/ic_logo"
                android:scaleType="fitCenter"
                android:layout_height="@dimen/d170" />


            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/fontSizeXLarge"
                android:textColor="@color/text_dark_grey"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/d50"
                android:layout_height="wrap_content"
                android:text="Version 1.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/fontSizeMediumLarge"
                android:textColor="@color/text_dark_grey"
                android:layout_marginTop="@dimen/d16"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2016-2017" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="7ayy. All rights Reserved"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/fontSizeMediumLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/d12"
                android:text="www.nebrasapps.com"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/fontSizeMediumLarge" />


            <ImageView
                android:id="@+id/img_nebras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d20"
                android:visibility="visible"
                android:onClick="openNebras"
                android:src="@drawable/ic_nebras"
                />


        </LinearLayout>



</FrameLayout>
