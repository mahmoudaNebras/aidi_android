<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/d6"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_job"
        app:layout_constraintTop_toBottomOf="@+id/img_job">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/d50"
            android:layout_height="@dimen/d50"
            android:layout_marginEnd="@dimen/d30"
            android:layout_marginTop="@dimen/d4"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siBorderColor="@android:color/white"
            app:siBorderWidth="@dimen/d6" />


        <ImageButton
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginStart="@dimen/d30"
            android:background="@drawable/oval_white"
            android:src="@drawable/ic_share"
            android:layout_marginTop="@dimen/d4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d120"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/img_job"
        app:layout_constraintStart_toStartOf="@+id/img_job"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


        <TextView
            android:id="@+id/tv_selected_people_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d24"
            android:layout_marginTop="@dimen/d8"
            android:gravity="left|center_vertical"
            android:text="10 / 2 People Selected"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/fontSizeSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <ImageView
            android:id="@+id/imgicjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d4"
            android:scaleType="fitXY"
            android:src="@drawable/ic_job"
            app:layout_constraintBottom_toBottomOf="@+id/tv_selected_people_count"
            app:layout_constraintEnd_toStartOf="@+id/tv_selected_people_count"
            app:layout_constraintTop_toTopOf="@+id/tv_selected_people_count" />


        <TextView
            android:id="@+id/tv_job_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d16"
            android:layout_marginTop="@dimen/d8"
            android:gravity="left|center_vertical"
            android:text="Household"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/fontSizeSmall"
            app:layout_constraintEnd_toStartOf="@+id/imgicjob"
            app:layout_constraintTop_toBottomOf="parent" />

        <ImageView
            android:id="@+id/img_job_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d10"
            android:scaleType="fitXY"
            android:src="@drawable/ic_address"
            app:layout_constraintBottom_toBottomOf="@+id/tv_job_type"
            app:layout_constraintEnd_toStartOf="@+id/tv_job_type"
            app:layout_constraintTop_toTopOf="@+id/tv_job_type" />


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d16"
            android:layout_marginTop="@dimen/d8"
            android:gravity="left|center_vertical"
            android:text="Saudi"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/fontSizeSmall"
            app:layout_constraintEnd_toStartOf="@+id/img_job_type"
            app:layout_constraintTop_toBottomOf="parent" />

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d10"
            android:scaleType="fitXY"
            android:src="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@+id/tv_location"
            app:layout_constraintEnd_toStartOf="@+id/tv_location"
            app:layout_constraintTop_toTopOf="@+id/tv_location" />


        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d24"
            android:layout_marginTop="@dimen/d10"
            android:gravity="right|center_vertical"
            android:text="Need a Photographer for Shop Opening"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/fontSizeMedium"
            app:layout_constraintEnd_toEndOf="@+id/tv_selected_people_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />


        <TextView
            android:id="@+id/tv_job_description"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d24"
            android:layout_marginTop="@dimen/d10"
            android:gravity="right|center_vertical"
            android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum "
            android:textColor="@color/text_dark_grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_selected_people_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title" />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dip"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="@+id/img_job"
        android:background="@color/off_white"
        app:layout_constraintStart_toStartOf="@+id/img_job"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <TextView
            android:id="@+id/tv_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d24"
            android:gravity="right|center_vertical"
            android:text="Discussion"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/fontSizeSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d10"
            android:scaleType="fitXY"
            android:src="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@+id/tv_discussion"
            app:layout_constraintEnd_toStartOf="@+id/tv_discussion"
            app:layout_constraintTop_toTopOf="@+id/tv_discussion" />



        <TextView
            android:id="@+id/tv_applied_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d24"
            android:gravity="right|center_vertical"
            android:text="200 Applied"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/fontSizeSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





        <ImageView
            android:id="@+id/img_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d14"
            android:scaleType="fitXY"
            android:src="@drawable/ic_clock"
            app:layout_constraintBottom_toBottomOf="@+id/tv_applied_count"
            app:layout_constraintStart_toEndOf="@+id/tv_applied_count"
            app:layout_constraintTop_toTopOf="@+id/tv_applied_count" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="2 Days Ago"
            android:layout_marginStart="@dimen/d6"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/fontSizeSmall"
            app:layout_constraintBottom_toBottomOf="@+id/tv_applied_count"
            app:layout_constraintStart_toEndOf="@+id/img_time"
            app:layout_constraintTop_toTopOf="@+id/tv_applied_count" />

    </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>