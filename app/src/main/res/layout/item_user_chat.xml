<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/d4"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/d40"
        android:layout_height="@dimen/d40"
        android:src="@drawable/placeholder"
        app:siStrokeMiter="0dip"
        android:layout_margin="@dimen/d4"
        app:siBorderColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_online"
        android:layout_width="@dimen/d10"
        android:layout_height="@dimen/d10"
        android:layout_marginEnd="@dimen/d4"
        android:layout_marginTop="@dimen/d4"
        android:background="@drawable/oval_green"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_constraintEnd_toEndOf="@+id/img_profile" />

    </android.support.constraint.ConstraintLayout>




