<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip"/>


    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotDiameter="8dp"
        android:layout_marginTop="@dimen/d2"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/d2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:dotGap="8dp"
        app:animationDuration="320"
        app:pageIndicatorColor="@color/grey"
        app:currentPageIndicatorColor="@color/text_dark_grey"/>


    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/dashed_strok"
        android:layerType="software"
        android:layout_marginTop="@dimen/d20"
        android:layout_height="@dimen/d6"/>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize">


        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d8"
            android:background="@null"
            android:text="Skip"
            android:onClick="btnSkip"
            android:textColor="@color/text_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Join Now"
            android:textColor="@color/mid_grey"
            android:onClick="setBtnJoin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d8"
            android:background="@null"
            android:onClick="btnNext"
            android:text="Next"
            android:textColor="@color/text_dark_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>